---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'La Tia Romy Restaurante';
const description = 'Restaurante, comida rapida, almuerzos, colaciones, para servir, para llevar, contamos con reparto a domicilio .';
const permalink = Astro.site.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="home-container">
    <div class="home-copy">
      <h2>La tia Romy</h2>
      <h1>!BienvenidosÂ¡</h1>
      <p>Restaurante, comida rapida, almuerzos, colaciones, para servir, para llevar, contamos con reparto a domicilio.</p>
    </div>

    <div class="hero-image-container">
      <picture>
        <source srcset="/assets/logo.png" media="(min-width: 600px)">
        <img class="hero-image" alt="La Tia Romy -Restaurante-" src="/assets/logo.png" width="550" height="466">
      </picture>
      
    </div>
    <!-- <div class="Ellipse_Bottom"></div> -->

    </div>
  </div>
</BaseLayout>


<style>
  .home-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .home-copy p {
    font-size: 1.4em;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
  }

  .caption {
    font-size: .8em;
    font-style: italic;
    text-align: left;
  }

  .hero-image {
    width: 100%;
    max-width: 550px;
    margin-bottom: 1em;
  
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 400px;
      z-index: 1;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
  }

  .Ellipse_Bottom {
  border-width: 3.571px;
  border-color: rgb(0, 0, 0);
  border-style: solid;
  border-radius: 50%;
  background-color: rgb(7, 7, 7);
  position: end;
  left: 440px;
  top: 2230px;
  width: 550.858px;
  height: 340.858px;
  z-index: 1;
  margin: 0 auto;
}
  

</style>
